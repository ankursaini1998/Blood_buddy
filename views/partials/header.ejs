<html>
<head>
    <title>Blood Bank</title>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
    <ul class="nav nav-tabs">
            <li class="nav-item">
            <a class="nav-link" href="/home">Blood_Buddy</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="/search">Search Donor</a>
            </li>
            <% if(!currentUser){ %>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/register">Register as Donor</a>
            </li>
            <% } else { %>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/profile">Signed In As <%= currentUser.local.username %></a>
            </li>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link " href="/auth/logout">Logout</a>
            </li>
            <% } %>
    </ul>

    
      <% if(error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button><p><%=error %></p></div>
      <% } %>
      
      <% if(success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button><p><%= success %></p></div>
      <% } %>
   