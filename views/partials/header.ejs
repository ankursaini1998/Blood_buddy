<body>
    <ul class="nav nav-tabs">
            <li class="nav-item">
            <a class="nav-link" href="/home">Blood_Buddy</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="/search">Search Donor</a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="/searchHospital">Search Hospital</a>
              </li> -->
            <% if(!currentUser){ %>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/login">Login </a>
            </li>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/register">Register as Donor</a>
            </li>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/loginHospital">Login As Hospital</a>
            </li>
            <li class="nav-item nav justify-content-end">
              <a class="nav-link" href="/auth/registerHospital">Register as Hospital</a>
            </li>
            <% } else { %>
            <li class="nav-item nav justify-content-end">

              <% if(currentUser.userType == "Donor") {  %>
              <a class="nav-link" href="/profile">Signed In As <%= currentUser.local.username %></a>
              <% } else { %>
              <a class="nav-link" href="/profileHospital">Signed In As <%= currentUser.local.username %></a>
              <% } %>

            </li>

            <li class="nav-item nav justify-content-end">
              <a class="nav-link " href="/auth/logout">Logout</a>
            </li>
            <% } %>
    </ul>

    
      <% if(error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button><p><%=error %></p></div>
      <% } %>
      
      <% if(success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button><p><%= success %></p></div>
      <% } %>
   